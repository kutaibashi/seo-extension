{
  "manifest_version": 3,
  "name": "Full SEO Page Analyzer",
  "version": "1.0",
  "description": "Analyzes key on-page SEO factors: meta tags, headings, links, images, schema, performance & more.",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "webRequest",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "options.html"
}